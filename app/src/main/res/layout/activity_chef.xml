<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chef_listView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChefActivity">

    <Button
        android:id="@+id/chef_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="이전"
        app:backgroundTint="#2196F3"
        app:layout_constraintEnd_toStartOf="@+id/chef_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chef_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="0 page / 0 pages"
        android:textColor="#E91E63"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/chef_prev"
        app:layout_constraintEnd_toStartOf="@+id/chef_next"
        app:layout_constraintStart_toEndOf="@+id/chef_prev"
        app:layout_constraintTop_toTopOf="@+id/chef_prev" />

    <Button
        android:id="@+id/chef_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="다음"
        app:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chef_page"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView_chef"
        android:layout_width="405dp"
        android:layout_height="480dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chef_prev" />

</androidx.constraintlayout.widget.ConstraintLayout>